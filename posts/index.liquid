---
layout: "base"
eleventyExcludeFromCollections: true
---
<section class="box">
  <div class="box-title">
    Blog Posts
  </div>
  <div class="box-content" style="max-height: 80vh; overflow-y: auto;">
    {% assign postsByYear = collections.all | groupPostsByYear %}
    {%- for year in postsByYear -%}
      <h4>{{ year.title }}</h4>
      <ul>
        {%- for post in year.posts -%}
        <li><a href="{{ post.url }}">{{ post.date | toDateString }}: {{ post.data.title }}</a></li>
        {%- endfor -%}
      </ul>
    {%- endfor -%}
  </div>
</section>